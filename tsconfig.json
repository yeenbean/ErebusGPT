{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": false,
    "target": "ES2022",
    "lib": ["es2023"],
    "module": "Node16",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
